<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textColorHint">@color/gold</item>
        <item name="android:buttonStyle">@style/button_style</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/grey</item>
        <item name="android:weekNumberColor">@color/grey</item>
    </style>

    <style name="button_style" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
    </style>

    <style name="toolbar_style" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/gold</item>
        <item name="android:textColorPrimary">@color/gold</item>
    </style>

    <style name="nelson_expanded_toolbar_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="AppThemeToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/gold</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textColorHint">@color/gold</item>
        <item name="android:buttonStyle">@style/button_style</item>
    </style>

</resources>
