<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/line_1"
        android:layout_width="10dp"
        android:layout_height="98dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"></View>

    <TextView
        android:id="@+id/outHour"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="08:00"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/outDate"
        app:layout_constraintLeft_toRightOf="@+id/outDate"
        app:layout_constraintTop_toTopOf="@+id/outDate" />

    <TextView
        android:id="@+id/outDate"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:maxLength="7"
        android:text="26 Sep"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/outAirportName"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="Valencia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/outIata"
        app:layout_constraintRight_toRightOf="@+id/outIata"
        app:layout_constraintTop_toBottomOf="@+id/outIata"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/inIata"
        android:layout_width="112dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/icon_arrow_in"
        android:gravity="center"
        android:text="PMV"
        android:textAlignment="viewStart"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/outIata"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toRightOf="@+id/outIata"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/outIata"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/inAirportName"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="Porlamar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/inIata"
        app:layout_constraintRight_toRightOf="@+id/inIata"
        app:layout_constraintTop_toBottomOf="@+id/inIata"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/journey_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/icon_seat"
        android:text="12"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inIata"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outIata"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:drawableRight="@drawable/icon_arrow_out"
        android:gravity="center"
        android:text="VLN"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/line_1"
        app:layout_constraintTop_toBottomOf="@+id/outDate"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/answers_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/journey_seats"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/answers_button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/answers_number"
        app:layout_constraintRight_toRightOf="@+id/answers_number"
        app:layout_constraintLeft_toLeftOf="@+id/answers_number"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_email_red_48dp" />

    <ImageView
        android:visibility="visible"
        android:id="@+id/answers_button_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/answers_number"
        app:layout_constraintRight_toRightOf="@+id/answers_number"
        app:layout_constraintLeft_toLeftOf="@+id/answers_number"
        app:srcCompat="@drawable/ic_email_gold_48dp" />

</android.support.constraint.ConstraintLayout>